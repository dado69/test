<div class="container">
  <h1>Blogers</h1>
  <div class="flickr_pagination mb-4">
    <%= will_paginate @users, :container => false %>
  </div>
  <div class="row">
    <% @users.each do |user| %>
      <div class="col-4 col-md-4 article-index">
        <p class="font-italic text-center"><%= link_to user.username, user %></p>
        <p><%= pluralize(user.articles.count, "article") %></p>
        <%= link_to "View profile", user, class: "btn btn-outline-succes" %>
        <% if logged_in? %>
          <% if user == current_user %>
            <%= link_to "Edit profile", edit_user_path(user), class: "btn" %>
          <% end %>
          <% if current_user.admin? %>
            <%= link_to "Delete user", user_path(user), class: "btn", method: :delete,
            data: {confirm: "Are you shure you want to delete the user"}  %>
          <% end %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
