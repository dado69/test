<div class="row">
  <div class="col-12">
    <%= render 'shared/errors', obj: @user %>
  </div>
</div>

<div class="row">
<%= form_with(model: @user, local: true) do |form| %>
   <div class="form-group row">
    <%= form.label :username, class: "col-12 col-form-label" %>
      <div class="col-12">
        <%= form.text_field :username, class: "form-control", placeholder: "Enter a username" %>
      </div>
  </div>
  
  <div class="form-group row">
    <%= form.label :email, class: "col-12 col-form-label" %>
      <div class="col-12">
        <%= form.email_field :email, class: "form-control", placeholder: "Enter your email address" %>
      </div>
  </div>
 
  <div class="form-group row">
    <%= form.label :password, class: "col-12 col-form-label" %>
      <div class="col-12">
        <%= form.password_field :password, class: "form-control", placeholder: "Choose a password" %>
      </div>
  </div>
 
  <div class="form-group row">
    <%= form.submit(@user.new_record? ? "Sign up" : "Update account", class: "btn btn-dark btn-lg") %>
  </div>

<% end %>
</div>