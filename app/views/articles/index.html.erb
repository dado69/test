<div class="container">

  <div class="row">
    <h1>Articles</h1>
  </div>

  <div class="row">
    <% @articles.each do |article| %>
      <div class="col-4 col-md-4 article-index">
        <%= link_to article_path(article) do %>
          <%= image_tag(article.image_url) %>
        <% end %>
        <h3><%= link_to article.title, article_path(article) %></h3>
      </div>
    <% end %>
  </div>

</div>