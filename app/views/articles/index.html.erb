<div class="container">

  <div class="row">
    <h1>Articles</h1>
  </div>

  <div class="row">
    <% @articles.each do |article| %>
      <div class="col-4 col-md-4">
        <p><%= image_tag(article.image_url) %></p>
        <h3><%= article.title %></h3>
        <p><%= article.description %></p>
        <p><%= link_to 'Show', article_path(article) %></p>
      </div>
    <% end %>
  </div>

</div>