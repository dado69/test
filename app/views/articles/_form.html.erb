<% if @article.errors.any? %>
  <h2> Errors on page:</h2>
  <ul>
  <% @article.errors.full_messages.each do |msg|%>
    <li><%= msg %></li>
  <% end %>   
  </ul> 
<% end %>
  
<%= form_with(model: @article, local: true) do |form| %>
   <div class="form-group row">
    <%= form.label :title, class: "col-12 col-form-label" %>
      <div class="col-12">
        <%= form.text_field :title, class: "form-control" %>
      </div>
  </div>
  
  <div class="form-group row">
    <%= form.label :image_url, class: "col-12 col-form-label" %>
      <div class="col-12">
        <%= form.text_field :image_url, class: "form-control" %>
      </div>
  </div>
 
  <div class="form-group row">
    <%= form.label :description, class: "col-12 col-form-label" %>
      <div class="col-12">
        <%= form.text_area :description, rows: 6, class: "form-control" %>
      </div>
  </div>
 
  <div class="form-group row">
    <%= form.submit class: "btn btn-dark btn-lg" %>
  </div>

<% end %>