<div class="row">
  <div class="col-12">
    <%= render 'shared/errors', obj: @article %>
  </div>
</div>

<div class="row">
<%= form_with(model: @article, local: true) do |form| %>
   <div class="form-group row">
    <%= form.label :title, class: "col-12 col-form-label" %>
      <div class="col-12">
        <%= form.text_field :title, class: "form-control", placeholder: "Title of article" %>
      </div>
  </div>
  
  <div class="form-group row">
    <%= form.label :image_url, class: "col-12 col-form-label" %>
      <div class="col-12">
        <%= form.text_field :image_url, class: "form-control", placeholder: "Image" %>
      </div>
  </div>
 
  <div class="form-group row">
    <%= form.label :description, class: "col-12 col-form-label" %>
      <div class="col-12">
        <%= form.text_area :description, rows: 6, class: "form-control", placeholder: "Description of article" %>
      </div>
  </div>
 
  <div class="form-group row">
    <%= form.submit class: "btn btn-dark btn-lg" %>
  </div>

<% end %>
</div>