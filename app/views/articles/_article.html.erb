<div class="row">
  <% @articles.each do |article| %>
    <div class="col-4 col-md-4 article-index">
      <%= link_to article_path(article) do %>
        <%= image_tag(article.image_url) %>
      <% end %>
      <h3><%= link_to article.title, article_path(article) %></h3>
      <p class="font-italic"> 
      <% if article.user %>
      <%= link_to article.user.username, user_path(article.user) %>
      <% end %>
      </p>
      <% if logged_in? && (article.user == current_user || current_user.admin?) %>
        <%= link_to "Edit", edit_article_path(article), class: "btn" %>
        <%= link_to "Delete", article_path(article), class: "btn", method: :delete, data: { confirm: "Are you shure?"} %>
      <% end %>
    </div>
  <% end %>
</div>