<div class="container">
  
  <div class="row">
    <h2><%= @article.title %></h2>
  </div>
  
  <div class="row">
  <div class="col-md-6 col-sm-12">
    <%= image_tag(@article.image_url) %>
  </div>
  <div class="col-md-6 col-sm-12">
    <p><%= simple_format(@article.description) %></p>
    <h5>Created: <%= time_ago_in_words(@article.created_at) %> ago</h5>
    <p class="font-italic">by <%= @article.user.username if @article.user %></p>
   

  </div>
  
    </div>

</div>
